<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0"
          styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.jbake.ui.controller.SettingsController" id="settings-pane">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0" prefHeight="70.0"/>
        <RowConstraints minHeight="30.0" prefHeight="50.0"/>
        <RowConstraints minHeight="30.0" prefHeight="50.0"/>
        <RowConstraints minHeight="30.0" prefHeight="50.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <ComboBox fx:id="mCountryChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                  GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
        <ComboBox fx:id="mLanguageChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
                  GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <Text id="settings-header" text="Settings" GridPane.columnIndex="0" GridPane.halignment="LEFT"
              GridPane.rowIndex="0" GridPane.valignment="TOP"/>
        <Label text="Country" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="1"
               GridPane.valignment="CENTER"/>
        <Label text="Language" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2"
               GridPane.valignment="CENTER"/>
        <Button mnemonicParsing="false" onAction="#handleCloseButtonAction" text="Close" GridPane.columnIndex="1"
                GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="BOTTOM"/>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <stylesheets>
        <URL value="@../css/styles.css"/>
    </stylesheets>
</GridPane>
